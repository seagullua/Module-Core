
<div class="container big-block">
    <%//include ./../book/bookEditor/editor_warning_modal.ejs%>
    <div class="col-md-8 col-md-offset-2">
        <div class="row">
            <div class="col-md-3">
                <a href="#" class="btn btn-default" style="width:100%;margin-top: 5px" data-toggle="modal" data-target="#change-password-modal">
                    <%= __('user_profile.button.change_password')%>
                </a>
                <div class="modal fade" id="change-password-modal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
                    <div class="modal-dialog">
                        <div class="modal-content">
                            <div class="modal-header">
                                <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
                                <h4 class="modal-title" id="myModalLabel"><%= __('user_profile.button.change_password')%></h4>
                            </div>
                            <div class="modal-body">
                                <form action="/profile/changePassword/" method="post" class="form-change-password">
                                    <div>
                                        <span><%= __('user_profile.change_password.old_password')%></span>
                                    </div>
                                    <div class="form-group">
                                        <input type="password" name="old_password" class="form-control old_password" placeholder="">
                                    </div>
                                    <div>
                                        <span><%= __('user_profile.change_password.new_password')%></span>
                                    </div>
                                    <div class="form-group">
                                        <input type="password" name="new_password_1" class="form-control new_password_1" placeholder="">
                                    </div>
                                    <div>
                                        <span><%= __('user_profile.change_password.new_password_confirm')%></span>
                                    </div>
                                    <div class="form-group">
                                        <input type="password" name="new_password_2" class="form-control new_password_2" placeholder="">
                                    </div>
                                    <div class="passwords_dont_match_text">
                                        <span style="color:red"><%= __('user_profile.change_password.new_passwords_dont_match')%></span>
                                    </div>
                                    <button type="submit" class="btn btn-default btn-block"><%= __('user_profile.button.change_password')%></button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>


            <div class="col-md-6">
                <div class="form-group">
                    <label class="col-sm-3">
                        Name:
                    </label>
                    <div class="col-sm-8">
                        <input type="text" class="form-control" placeholder="Placeholder Name" id="profile-name" value="<%=user.name||"Name"%>">
                        <span class="help-block"><%= __('user_profile.help_name')%></span>
                    </div>
                </div>

                <div class="form-group">
                    <label class="col-sm-3">
                        Surname:
                    </label>
                    <div class="col-sm-8">
                        <input type="text" class="form-control" placeholder="Placeholder Surname"  id="profile-surname" value="<%=user.surname||"Surname"%>">
                        <span class="help-block"><%= __('user_profile.button.help_surname')%></span>
                    </div>
                </div>

                <div class="form-group">
                    <label class="col-sm-3">
                        e-mail:
                    </label>
                    <div class="col-sm-8">
                        <input type="text" class="form-control" placeholder="Placeholder Email" id="profile-email"  value="<%=user.email%>">
                        <% if (!user.confirmedEmail) {%>
                        <span class="help-block"><%=__('user_profile.confirmed.information')%><a href="/profile/resend">
                            <%=__('user_profile.confirmed.resend_confirmation')%></a></span>
                        <%}%>
                    </div>

                </div>

            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-10">
                <div class="alert alert-success" role="alert" style="display: none">
                    <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">Ã—</span><span class="sr-only">Close</span></button>
                    <strong><%=__('user_profile.saved')%></strong> <%=__('email_templates.confirm_link')%>
                </div>
            </div>
            <div class="text-right">
                <a href="#" id="profile-submit" class="btn btn-primary"><%= __('user_profile.button.save_changes') %></a>
                </div>
        </div>
    </div>

</div>


<% js('/js/user/profile.js') %>
<script>
    var warning = "<%= __('editor.out.warning')%>";
</script>
