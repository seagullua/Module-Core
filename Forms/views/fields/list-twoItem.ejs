<div class="form-group category-group" data-category="<%= field.value.category %>" data-visible="<%= field.value.category != 'no_category' %>">
    <label for="<%= field.id %>" class="col-sm-2 control-label <%= field.optional?"optional":""%>">
        <%= __(field.title) %>
    </label>
    <div class="col-sm-10 row">
        <div class="col-sm-4">
            <select name="<%= field.id + '[category]' %>" id="<%= field.id %>" class="form-control category">
                <%
                for (var i = 0; i < field.items.length; ++i) {
                %>
                <option value="<%= field.items[i].id %>" <%= field.value.category == field.items[i].id?'selected':'' %>><%= field.items[i].name %></option>
                <%
                }
                %>
            </select>
        </div>
        <div class="col-sm-4">
            <%
            for (var i = 0; i < field.items.length; ++i) {
                if (field.items[i].children) {
            %>
                <select name="<%= field.id + '[subcategory]' %>" id="" class="form-control subcategory" data-parent="<%=field.items[i].id%>" data-category="<%= field.id %>">
                <%
                for(var j = 0; j < field.items[i].children.length; ++j) {
                %>
                    <option value="<%= field.items[i].children[j].id %>" <%= field.value.subcategory == field.items[i].children[j].id?'selected':'' %>><%= field.items[i].children[j].name %></option>
                <%
                }
                %>
                </select>
            <%
                }
            }
            %>

        </div>
        <span class="validator-error alert alert-danger help-block bad-between-number" style="display: none;">
            <%= __('form.validator.bad_between_number') %></span>

        <!-- hiding that from user -->
        <!--
        <div class="col-sm-4">
            <button type="button" class="btn btn-primary add-category">
                <span class="glyphicon glyphicon-plus"></span>
            </button>
            <button type="button" class="btn btn-danger remove-category">
                <span class="glyphicon glyphicon-minus"></span>
            </button>
        </div>
        -->

    </div>
</div>