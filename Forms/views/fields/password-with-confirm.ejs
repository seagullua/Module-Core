<div class="form-group" id="<%= field.id %>-parent">
    <label for="password" class="col-sm-2 control-label <%= field.optional?"optional":""%>">
        <%= __(field.title) %>
    </label>
    <div class="col-sm-10">
        <input type="password" class="form-control"  id="<%= field.id %>" name="<%= field.id %>" <% if (field.placeholder) {%>
               placeholder="<%= __(field.placeholder) %>"
        <% } %>

        <br>
        <% if(field.hint_text) { %>
        <span class="help-block"><%= __(field.hint_text) %></span>
        <% } %>

        <span class="validator-error alert alert-danger help-block error-empty" style="display: none;">
            <%= __('form.validator.empty_form') %></span>
        <span class="validator-error alert alert-danger help-block too-long" style="display: none;">
            <%= __('form.validator.too_long') %></span>
        <span class="validator-error alert alert-danger help-block many-words" style="display: none;">
            <%= __('form.validator.many_words') %></span>
        <br/>
    </div>


    <label for="confirm_password" class="col-sm-2 control-label <%= field.optional?"optional":""%>">
        <%= __(field.confirm_title) %>
    </label>
    <div class="col-sm-10">
        <input type="password" class="form-control" id="<%= field.id %>-confirm_password" name="<%= field.id %>-confirm_password" <% if (field.confirm_placeholder) {%>
               placeholder="<%= __(field.confirm_placeholder) %>"
        <% } %>

        <br/>
        <% if(field.confirm_hint_text) { %>
        <span class="help-block"><%= __(field.confirm_hint_text) %></span>
        <% } %>

        <span class="validator-error alert alert-danger help-block bad-passwords" style="display: none;">
        <%= __('form.validator.bad-passwords') %>
        </span>
    </div>
</div>
