<div class="form-group">
    <label for="<%= field.id %>" class="col-sm-2 control-label <%= field.optional?"optional":""%>">
        <%= __(field.title) %>
    </label>
    <div class="col-sm-10" id="<%= field.id %>-parent">
        <input type="text" class="form-control" id="<%= field.id %>" name="<%= field.id %>"
            <% if (field.placeholder) {%>
               placeholder="<%= __(field.placeholder) %>"
            <% } %>
            <% if(field.value) { %>
                value="<%= field.value %>"
            <%}%>
        >
        <% if(field.hint_text) { %>
            <span class="help-block help-text"><%= __(field.hint_text) %></span>
        <% } %>

        <span class="validator-error alert alert-danger help-block not-even" style="display: none;">
            <%= __('form.validator.not_even') %></span>

        <span class="validator-error alert alert-danger help-block negative-number" style="display: none;">
            <%= __('form.validator.negative_number') %></span>

        <span class="validator-error alert alert-danger help-block bad-between-number" style="display: none;">
            <%= __('form.validator.bad_between_number') %></span>
    </div>
</div>

