<% pageTitle(__('auth.sign_in.form_title')) %>

<div class="container big-block">
    <div class="col-md-8 col-md-offset-2">
        <h1><%- __('auth.sign_in.form_title') %></h1>

        <div class="registration-form">
            <div class="step">
                <form method="post">
                    <p class="text-justify"><%- __('auth.sign_in.form_description') %></p>

                    <div class="form-group">
                        <label for="email"><%= __('auth.sign_up.email_label') %></label>
                        <input type="text" id="email"
                               class="form-control input-large"
                               placeholder="<%= __('auth.sign_up.email_placeholder') %>"
                               name="email"
                               value="<%= email %>"
                                />

                    </div>

                    <div class="form-group">
                        <label for="password"><%= __('auth.sign_up.password_label') %></label>
                        <input type="password" id="password"
                               class="form-control input-large"
                               placeholder="<%= __('auth.sign_up.password_placeholder') %>"
                               name="password"
                               value="<%= password %>"
                                />
                    </div>

                    <% if(message) { %>
                    <div class="alert alert-danger"><%- __(message) %></div>
                    <% } %>

                    <input type="submit"
                           class="btn btn-lg btn-default pull-right next"
                           value="<%- __('auth.sign_in.button') %>"/>
                </form>
            </div>
        </div>
    </div>
</div>
